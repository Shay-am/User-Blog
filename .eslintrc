{
  "extends": ["airbnb", "prettier", "plugin:import/react"],

  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/no-unresolved": 1,
    "import/prefer-default-export": "off",
    "react/prop-types": "off",
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "globals": {
    "document": true,
    "window": true
  }
}
